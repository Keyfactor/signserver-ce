	    <![CDATA[
          ver = project.getProperty("app.version.number");
		  relstring = ver.replace('.','_');
	      //self.log(ver);
	      //self.log(relstring);
		  project.setProperty("signserver.zipversion", relstring);
          str = project.getProperty("signserver.zipversion");
	    ]]>
