<project name="mrtdsodsigner" default="mrtdsodsignermar" basedir="..">


       
<target name="mrtdsodsignermar" unless="buildMailSigner">
    <path id="mrtdsodsigner.build.classpath">
      <path refid="signserver.compile.classpath" />
      <path location="${build}" />
    </path>

    <taskdef name="mar" classname="org.signserver.anttasks.MarAntTask" 
      classpathref="mrtdsodsigner.build.classpath"/>
       
    <taskdef name="part" classname="org.signserver.anttasks.PartAntTask" 
      classpathref="mrtdsodsigner.build.classpath"/>
 
    <javac destdir="${build}" debug="on" includeantruntime="no" encoding="iso8859-1" target="${server.java.target}" source="${server.java.target}">
       <classpath refid="mrtdsodsigner.build.classpath" />
       <src path="SignServer-Module-MRTDSODSigner/src/java" />
       <include name="org/signserver/module/mrtdsodsigner/*.java"/>
       <include name="org/jmrtd/*.java"/>
       <include name="net/sourceforge/scuba/**/*.java"/>
    </javac>

	<jar jarfile="dist-server/mrtdsodsigner-module.jar">
		<fileset dir="${build}">
		    <include name="org/signserver/module/mrtdsodsigner/**"/>
		    <include name="org/jmrtd/**"/>
		    <include name="net/sourceforge/scuba/**"/>
		</fileset>
    </jar>
    <mar version="${mar.versions}" modulename="mrtdsodsigner" verbose="true" destfile="${basedir}/dist-server/mrtdsodsigner.mar">
        <part>
            <fileset dir="dist-server">
                <include name="mrtdsodsigner-module.jar"/>
            </fileset>
            <fileset dir="SignServer-Module-MRTDSODSigner/src/conf">
                <include name="*.properties"/>
            </fileset>
        </part>
    </mar>
</target>

</project>
