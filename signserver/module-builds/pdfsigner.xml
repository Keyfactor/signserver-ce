<project name="pdfsigner" default="pdfsignermar" basedir="..">


       
<target name="pdfsignermar" unless="buildMailSigner">
    <path id="pdfsigner.build.classpath">
      <path refid="signserver.compile.classpath" />
      <path location="${build}" />
      <fileset dir="lib/module/pdfsigner/itext" includes="*.jar" />
    </path>

    <taskdef name="mar" classname="org.signserver.anttasks.MarAntTask" 
      classpathref="pdfsigner.build.classpath"/>
       
    <taskdef name="part" classname="org.signserver.anttasks.PartAntTask" 
      classpathref="pdfsigner.build.classpath"/>
 
    <javac destdir="${build}" debug="on" includeantruntime="no" encoding="iso8859-1" target="${server.java.target}" source="${server.java.target}">
       <classpath refid="pdfsigner.build.classpath" />
       <src path="SignServer-Module-PDFSigner/src/java" />
       <include name="org/signserver/module/pdfsigner/*.java"/>       
    </javac>

	<jar jarfile="dist-server/pdfsigner-module.jar">
		<fileset dir="${build}">
		    <include name="org/signserver/module/pdfsigner/**"/>
		</fileset>
    </jar>
    <mar version="${mar.versions}" modulename="pdfsigner" verbose="true" destfile="${basedir}/dist-server/pdfsigner.mar">
        <part>
            <fileset dir="dist-server">
                <include name="pdfsigner-module.jar"/>
            </fileset>
            <fileset dir="SignServer-Module-PDFSigner/src/conf">
                <include name="*.properties"/>
            </fileset>
        </part>
    </mar>
</target>

</project>
