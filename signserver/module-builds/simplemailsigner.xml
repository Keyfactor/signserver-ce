<project name="simplemailsigner" default="simplemailsignermar" basedir="..">


       
<target name="simplemailsignermar" if="buildMailSigner">
    <path id="simplemailsigner.build.classpath">
      <path refid="mailsigner.compile.classpath" />
      <path location="${build}" />
    </path>

    <taskdef name="mar" classname="org.signserver.anttasks.MarAntTask" 
      classpathref="simplemailsigner.build.classpath"/>
       
    <taskdef name="part" classname="org.signserver.anttasks.PartAntTask" 
      classpathref="simplemailsigner.build.classpath"/>
 
    <javac destdir="${build}" debug="on" includeantruntime="no" encoding="iso8859-1" target="${server.java.target}" source="${server.java.target}">
       <classpath refid="simplemailsigner.build.classpath" />
       <src path="${src.java}" /> 
       <include name="org/signserver/mailsigner/module/simplemailsigner/*.java"/>       
    </javac>

	<jar jarfile="dist-server/simplemailsigner-module.jar">
		<fileset dir="${build}">
		    <include name="org/signserver/mailsigner/module/simplemailsigner/**"/>
		</fileset>
    </jar>
    <mar version="${mar.versions}" modulename="simplemailsigner" verbose="true" destfile="dist-server/simplemailsigner.mar">
        <part>
            <fileset dir="dist-server">
                <include name="simplemailsigner-module.jar"/>
                <include name="mailsigner-module-common.jar"/>
            </fileset>
            <fileset dir="src/module-configs/simplemailsigner">
                <include name="*.properties"/>
            </fileset>
        </part>
    </mar>
</target>

</project>
