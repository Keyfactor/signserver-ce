<project name="tsa" default="tsamar" basedir="..">


       
<target name="tsamar" unless="buildMailSigner">
    <path id="tsamar.build.classpath">
      <path refid="signserver.compile.classpath" />
      <path location="${build}" />
      <fileset dir="lib/module/tsa/${server.java.target}" includes="*.jar" />
    </path>

    <taskdef name="mar" classname="org.signserver.anttasks.MarAntTask" 
      classpathref="tsamar.build.classpath" />
       
    <taskdef name="part" classname="org.signserver.anttasks.PartAntTask" 
      classpathref="tsamar.build.classpath"/>
 
    <javac destdir="${build}" debug="on" includeantruntime="no" encoding="iso8859-1" target="${server.java.target}" source="${server.java.target}">
       <classpath refid="tsamar.build.classpath" />
       <src path="SignServer-Module-TSA/src/java" />
       <include name="org/signserver/module/tsa/*.java"/>       
    </javac>

	<jar jarfile="dist-server/tsa-module.jar">
		<fileset dir="${build}">
		    <include name="org/signserver/module/tsa/**"/>
		</fileset>
    </jar>
    <mar version="${mar.versions}" modulename="tsa" verbose="true" destfile="${basedir}/dist-server/tsa.mar">
        <part>
            <fileset dir="lib/module/tsa/${server.java.target}">
                <include name="*.jar"/>
            </fileset>
            <fileset dir="dist-server">
                <include name="tsa-module.jar"/>
            </fileset>
            <fileset dir="SignServer-Module-TSA/src/conf">
                <include name="*.properties"/>
            </fileset>
        </part>
    </mar>
</target>

</project>
