<project name="xmlsigner" default="xmlsignermar" basedir="..">


       
<target name="xmlsignermar" unless="buildMailSigner">
    <path id="xmlsigner.build.classpath">
      <path refid="signserver.compile.classpath" />
      <path location="${build}" />
    </path>

    <taskdef name="mar" classname="org.signserver.anttasks.MarAntTask" 
      classpathref="xmlsigner.build.classpath"/>
       
    <taskdef name="part" classname="org.signserver.anttasks.PartAntTask" 
      classpathref="xmlsigner.build.classpath"/>
 
    <javac destdir="${build}" debug="on" includeantruntime="no" encoding="iso8859-1" target="${server.java.target}" source="${server.java.target}">
       <classpath refid="xmlsigner.build.classpath" />
       <src path="SignServer-Module-XMLSigner/src/java" />
       <include name="org/signserver/module/xmlsigner/*.java"/>       
    </javac>

	<jar jarfile="dist-server/xmlsigner-module.jar">
		<fileset dir="${build}">
		    <include name="org/signserver/module/xmlsigner/**"/>
		</fileset>
    </jar>
    <mar version="${mar.versions}" modulename="xmlsigner" verbose="true" destfile="${basedir}/dist-server/xmlsigner.mar">
        <part>
            <fileset dir="dist-server">
                <include name="xmlsigner-module.jar"/>
            </fileset>
            <fileset dir="SignServer-Module-XMLSigner/src/conf">
                <include name="*.properties"/>
            </fileset>
        </part>
    </mar>
</target>

</project>
