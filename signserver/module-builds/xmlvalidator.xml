<project name="xmlvalidator" default="xmlvalidatormar" basedir="..">


       
<target name="xmlvalidatormar" unless="buildMailSigner">
    <path id="xmlvalidator.build.classpath">
      <path refid="signserver.compile.classpath" />
      <path location="${build}" />
    </path>

    <taskdef name="mar" classname="org.signserver.anttasks.MarAntTask" 
      classpathref="xmlvalidator.build.classpath"/>
       
    <taskdef name="part" classname="org.signserver.anttasks.PartAntTask" 
      classpathref="xmlvalidator.build.classpath"/>
 
    <javac destdir="${build}" debug="on" includeantruntime="no" encoding="iso8859-1" target="${server.java.target}" source="${server.java.target}">
       <classpath refid="xmlvalidator.build.classpath" />
       <src path="modules/SignServer-Module-XMLValidator/src/java" />
       <include name="org/signserver/module/xmlvalidator/*.java"/>       
    </javac>

	<jar jarfile="dist-server/xmlvalidator-module.jar">
		<fileset dir="${build}">
		    <include name="org/signserver/module/xmlvalidator/**"/>
		</fileset>
    </jar>
    <mar version="${mar.versions}" modulename="xmlvalidator" verbose="true" destfile="${basedir}/dist-server/xmlvalidator.mar">
        <part>
            <fileset dir="dist-server">
                <include name="xmlvalidator-module.jar"/>
            </fileset>
            <fileset dir="modules/SignServer-Module-XMLValidator/src/conf">
                <include name="*.properties"/>
            </fileset>
        </part>
    </mar>
</target>

</project>
