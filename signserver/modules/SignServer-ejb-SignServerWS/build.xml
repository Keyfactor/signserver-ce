    <target name="dist-module" depends="dist">
        <copy todir="../../dist-server/">
            <fileset dir="dist">
                <include name="*.jar"/>
            </fileset>
        </copy>
        <taskdef name="moddesc" classname="org.signserver.anttasks.ModulesDescriptorTask" classpath="${javac.classpath}"/>
        <property name="distJar" value="SignServer-ejb-SignServerWS.jar"/>
        <property name="base" location="../../"/>
        <moddesc classpathValue="${javac.classpath}" dists="${distJar}" toFile="../../mods-available/20_${moduleName}.properties" moduleName="${moduleName}" moduleType="ejb" libsPrefix="../../lib/,${base}/lib/" excludePrefix="../SignServer-BuildTools/,../SignServer-ejb/,${base}/lib/ext/ejb/,${base}/lib/ext/servlet-2.3.jar,${base}/lib/javaee-">
            <property name="module.ejb" value="${distJar}"/>
            <property name="postprocess.files" value="postprocess.file1"/>
            <property name="postprocess.file1.src" value="${distJar}"/>
            <property name="postprocess.file1.includes" value="META-INF/ejb-jar.xml"/>
        </moddesc>
    </target>
    
