            </fileset>
        </copy>
        <symlinklibs action="replace" dir="${debian.pkgdist.destdir}/signserver-server/${prefix}/${pkg.basename}/lib" mappingsFile="${mappingsFile}"/>
        
        <!-- signserver-admingui -->
