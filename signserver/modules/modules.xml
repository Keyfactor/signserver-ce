        <istrue value="${adminws.enabled}"/>
    </condition>
    <condition property="includejaxws">
        <or>
            <istrue value="${signserverws.enabled}"/>
            <istrue value="${genericws.enabled}"/>
            <istrue value="${validationws.enabled}"/>
