<entity-mappings
  xmlns="http://java.sun.com/xml/ns/persistence/orm"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://java.sun.com/xml/ns/persistence/orm orm_1_0.xsd"
  version="1.0">

    <!-- Table had to long name -->
    <package>org.signserver.ejb</package>
    <entity class="org.signserver.ejb.GlobalConfigurationDataBean"
        name="GlobalConfigurationDataBean">
        <table name="GLOBALCONFIG"/>
    </entity>

    <!-- Column types was mapped to LONG -->
    <entity class="org.signserver.ejb.ClusterClassLoaderDataBean"
        name="ClusterClassLoaderDataBean">
        <table name="CLUSTEREDCLASSES"/>

        <attributes>
            <basic name="implInterfaces">
                <column name="implinterfaces" column-definition="clob"/>
            </basic>
            <basic name="description">
                <column name="description" column-definition="clob"/>
            </basic>
            <basic name="comment">
                <column name="comment0" column-definition="clob"/>
            </basic>
        </attributes>
    </entity>

    
</entity-mappings>

