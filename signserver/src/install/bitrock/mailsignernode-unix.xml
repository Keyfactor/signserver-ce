                </propertiesFileSet> 
                <propertiesFileSet>
                  <file>/etc/mailsigner/mailsigner.conf</file>
                  <key>mailsigner.smtpauth</key>
                  <value>${smtpauth}</value>
                </propertiesFileSet> 
                <actionGroup>
                  <actionList>
                    <propertiesFileSet>
                      <file>/etc/mailsigner/mailsigner.conf</file>
                      <key>mailsigner.gatewayhost</key>
                      <value>${gatewayhost}</value>
