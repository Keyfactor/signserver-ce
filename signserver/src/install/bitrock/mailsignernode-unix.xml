                       <linkName>${installdir}/james/apps/james/SAR-INF/environment.xml</linkName>
                       <target>${installdir}/logconf/james-environment-unix-syslog.xml</target>
                     </createSymLink> 
                     <substitute>
                       <files>${installdir}/logconf/james-environment-unix-syslog.xml</files>
                       <substitutionList>
                         <substitution>
                           <pattern>@SYSLOG_HOST@</pattern>
                           <value>${sysloghostname}</value>
                         </substitution>
                       </substitutionList>
                     </substitute>
                   </actionList>
                   <ruleEvaluationLogic>or</ruleEvaluationLogic>
                   <ruleList>
                     <ruleGroup>
                       <ruleEvaluationLogic>and</ruleEvaluationLogic>
                       <ruleList>
                          <fileTest>                    
                            <path>/etc/mailsigner/mailsigner.conf</path>
                            <condition>exists</condition>
                          </fileTest>
                          <fileContentTest>
                            <path>/etc/mailsigner/mailsigner.conf</path>
                            <logic>contains</logic>
                            <text>syslog.hostname</text>
                          </fileContentTest>
                        </ruleList>
                     </ruleGroup>
                     <compareText>
                      <text>${usesyslog}</text>
                      <logic>equals</logic>
                      <value>1</value>
                     </compareText>
                   </ruleList>
                </actionGroup>
                <addTextToFile>
                  <file>/etc/mailsigner/mailsigner.conf</file>
                  <text>#MailSigner properties file.</text>
                  <ruleList>
                    <fileTest>                    
                      <path>/etc/mailsigner/mailsigner.conf</path>
                      <condition>not_exists</condition>
                    </fileTest>
                  </ruleList>
                </addTextToFile>                                           
                <propertiesFileSet>
                  <file>/etc/mailsigner/mailsigner.conf</file>
                  <key>mailsigner.smtpport</key>
                  <value>${smtpport}</value>
                </propertiesFileSet>
                <propertiesFileSet>
                  <file>/etc/mailsigner/mailsigner.conf</file>
                  <key>mailsigner.primarydns</key>
