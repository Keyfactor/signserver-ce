                  </fileContentTest>
                </ruleList>
              </propertiesFileGet>
              <propertiesFileGet>
                <file>/etc/mailsigner/mailsigner.conf</file>
                <variable>primarydns</variable>
                <key>mailsigner.primarydns</key>
