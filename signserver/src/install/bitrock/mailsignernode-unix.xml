                        </ruleList>
                     </ruleGroup>
                     <compareText>
                      <text>${usegateway}</text>
                      <logic>equals</logic>
                      <value>1</value>
                     </compareText>
                   </ruleList>
                </actionGroup>
                <actionGroup>
                  <actionList>
                    <propertiesFileSet>
                      <file>/etc/mailsigner/mailsigner.conf</file>
                      <key>mailsigner.gatewayport</key>
                      <value>${gatewayport}</value>
                    </propertiesFileSet> 
                  </actionList>
