<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
           xmlns:j2ee="http://java.sun.com/xml/ns/javaee" 
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
           version="2.5" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
           
    <display-name>SignServer Server Servlet Configuration</display-name>

    <servlet>
        <servlet-name>GenericProcessServlet</servlet-name>
        <servlet-class>org.signserver.web.GenericProcessServlet</servlet-class>
    </servlet> 
    <servlet>
        <servlet-name>StartServiceServlet</servlet-name>
        <servlet-class>org.signserver.web.StartServicesServlet</servlet-class>  
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>GenericProcessServlet</servlet-name>
        <url-pattern>/tsa</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GenericProcessServlet</servlet-name>
        <url-pattern>/pdf</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GenericProcessServlet</servlet-name>
        <url-pattern>/process</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StartServiceServlet</servlet-name>
        <url-pattern>/startservices</url-pattern>
    </servlet-mapping>

</web-app>