<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
<persistence-unit name="cesecore-read" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>
        <!-- Note: mapping-file is provided programtically when the entity manager is created -->
        <class>org.cesecore.audit.impl.integrityprotected.AuditRecordData</class>
        <properties>
            <!-- Note: Additional properties are put in programatically -->
            <property name="hibernate.hbm2ddl.auto" value="validate"/>
            <property name="hibernate.query.jpaql_strict_compliance" value="true"/>
        </properties>
    </persistence-unit>
</persistence>
